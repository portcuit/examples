{
  "extends": "./tsconfig.esm.json",
  "compilerOptions": {
    "rootDir": "./src",
    "plugins": [
      {
        "transform": "ts-transformer-esm-web",
        "resolve": [
          {
            "prefix": "/esm/",
            "suffix": ".js",
            "modules": ["snabbdom/**"]
          },
          {
            "prefix": "/esm/vendor/",
            "suffix": ".js",
            "modules": ["@pkit/snabbdom/**/processors"]
          },
          {
            "prefix": "/esm/vendor/",
            "suffix": "/index.js",
            "modules": ["pkit", "pkit/**", "@pkit/**"]
          },
          {
            "prefix": "/esm/",
            "suffix": "/index.js",
            "modules": ["ramda", "minimatch", "remark", "remark-vdom", "@ungap/event-target"]
          }
        ],
        "replace": {
          "rxjs": "https://cdn.jsdelivr.net/npm/@esm-bundle/rxjs@6.6.2/esm/es2015/rxjs.min.js",
          "rxjs/operators": "https://cdn.jsdelivr.net/npm/@esm-bundle/rxjs@6.6.2/esm/es2015/rxjs-operators.min.js",
          "emotion": "https://cdn.jsdelivr.net/npm/@esm-bundle/emotion@10.0.27/esm/emotion.min.js",
          "@pkit/snabbdom/lib/jsx": "/esm/snabbdom/jsx.js",
          "@pkit/snabbdom/lib/h": "/esm/snabbdom/h.js"
        },
        "after": true
      }
    ]
  },
  "include": [
    "./src"
  ]
}