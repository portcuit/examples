{
  "extends": "./tsconfig.esm.json",
  "compilerOptions": {
    "rootDir": "src/ui",
    "outDir": "src/ui/esm",
    "plugins": [
      {
        "transform": "ts-transformer-esm-web",
        "resolve": [
          {
            "prefix": "/esm/",
            "suffix": ".js",
            "modules": ["snabbdom/**"]
          },
          {
            "prefix": "/esm/vendor/",
            "suffix": ".js",
            "modules": ["@pkit/snabbdom/**/processors"]
          },
          {
            "prefix": "/esm/vendor/",
            "suffix": "/index.js",
            "modules": ["pkit", "pkit/**", "@pkit/**"]
          },
          {
            "prefix": "/esm/",
            "suffix": "/index.js",
            "modules": ["buffer", "iconv-lite", "jschardet" ,"unified", "rehype-parse" ,"rehype-stringify", "rehype-format", "rxjs", "rxjs/operators", "ramda", "minimatch", "remark", "remark-vdom", "@ungap/event-target"]
          }
        ],
        "replace": {
          "@pkit/snabbdom/lib/jsx": "/esm/snabbdom/jsx.js",
          "@pkit/snabbdom/lib/h": "/esm/snabbdom/h.js"
        },
        "after": true
      }
    ]
  },
  "exclude": [
    "src/ui/!(app|vendor)"
  ],
  "include": [
    "src/ui/app",
    "src/ui/vendor"
  ]
}