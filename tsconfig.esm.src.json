{
  "extends": "./tsconfig.esm.json",
  "compilerOptions": {
    "rootDir": "./src",
    "plugins": [
      {
        "transform": "ts-transformer-esm-web",
        "resolve": [
          {
            "prefix": "/esm/",
            "suffix": "/index.mjs",
            "modules": ["@pkit/snabbdom/jsx"]
          },
          {
            "prefix": "/esm/vendor/",
            "suffix": "/index.js",
            "modules": ["pkit/**", "@pkit/**"]
          },
          {
            "prefix": "/esm/",
            "suffix": "/index.js",
            "modules": ["ramda", "minimatch"]
          }
        ],
        "replace": {
          "rxjs": "https://cdn.jsdelivr.net/npm/@esm-bundle/rxjs@6.6.2/esm/es2015/rxjs.min.js",
          "rxjs/operators": "https://cdn.jsdelivr.net/npm/@esm-bundle/rxjs@6.6.2/esm/es2015/rxjs-operators.min.js",
          "emotion": "https://cdn.jsdelivr.net/npm/@esm-bundle/emotion@10.0.27/esm/emotion.min.js"
        },
        "after": true
      }
    ]
  },
  "include": [
    "./src"
  ]
}