{
  "extends": "./tsconfig.esm.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "public/js",
    "plugins": [
      {
        "transform": "ts-transformer-esm-web",
        "resolve": [
          {
            "prefix": "/js/",
            "suffix": ".js",
            "modules": [
              "snabbdom/**"
            ]
          },
          {
            "prefix": "/js/vendor/",
            "suffix": "/index.js",
            "modules": [
              "pkit",
              "pkit/**",
              "@pkit/**"
            ]
          },
          {
            "prefix": "/js/",
            "suffix": "/index.js",
            "modules": [
              "jschardet",
              "unified",
              "rehype-stringify",
              "rehype-parse",
              "rehype-format",
              "rxjs",
              "rxjs/operators",
              "@ungap/event-target",
              "remark",
              "remark-vdom",
              "minimatch",
              "ramda",
              "dayjs"
            ]
          }
        ],
        "replace": {
          "../server/": "/js/vendor/@pkit/next/mock/server.js",
          "@pkit/snabbdom/lib/jsx": "/js/snabbdom/jsx.js",
          "@pkit/snabbdom/lib/h": "/js/snabbdom/h.js",
          "@pkit/snabbdom/lib/tovnode": "/js/snabbdom/tovnode.js",
          "@pkit/snabbdom/lib/init": "/js/snabbdom/init.js",
          "@pkit/snabbdom/lib/moodules/attributes": "/js/snabbdom/moodules/attributes.js",
          "@pkit/snabbdom/lib/modules/props": "/js/snabbdom/modules/props.js",
          "@pkit/snabbdom/lib/modules/style": "/js/snabbdom/modules/style.js",
          "@pkit/snabbdom/lib/modules/eventlisteners": "/js/snabbdom/modules/eventlisteners.js",
          "@pkit/snabbdom/lib/modules/dataset": "/js/snabbdom/modules/dataset.js"
        },
        "after": true
      }
    ]
  },
  "include": [
    "src/app",
    "src/vendor"
  ]
}
