{
  "extends": "./tsconfig.esm.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "public/esm",
    "plugins": [
      {
        "transform": "ts-transformer-esm-web",
        "resolve": [
          {
            "prefix": "/esm/",
            "suffix": ".js",
            "modules": ["snabbdom/**"]
          },
          {
            "prefix": "/esm/vendor/",
            "suffix": ".js",
            "modules": ["@pkit/snabbdom/**/processors"]
          },
          {
            "prefix": "/esm/vendor/",
            "suffix": "/index.js",
            "modules": ["pkit", "pkit/**", "@pkit/**"]
          },
          {
            "prefix": "/esm/",
            "suffix": "/index.js",
            "modules": [
              "jschardet",
              "unified",
              "rehype-stringify",
              "rehype-parse",
              "rehype-format",
              "rxjs",
              "rxjs/operators",
              "@ungap/event-target",
              "remark",
              "remark-vdom",
              "minimatch",
              "ramda",
              "dayjs"
            ]
          }
        ],
        "replace": {
          "@pkit/snabbdom/lib/jsx": "/esm/snabbdom/jsx.js",
          "@pkit/snabbdom/lib/h": "/esm/snabbdom/h.js"
        },
        "after": true
      }
    ]
  },
  "include": [
    "src/app",
    "src/vendor"
  ]
}